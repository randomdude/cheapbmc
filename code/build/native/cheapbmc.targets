<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" >
	<ItemDefinitionGroup>
		<ClCompile>
			<AdditionalIncludeDirectories>$(MSBuildThisFileDirectory)../../lib/native/include/;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
		</ClCompile>
		
		<Link>
			<AdditionalLibraryDirectories>$(MSBuildThisFileDirectory)../../lib/native/$(PlatformTarget)/$(Configuration);%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
			<AdditionalDependencies>cheapbmc.lib;%(AdditionalDependencies)</AdditionalDependencies>
		</Link>
	</ItemDefinitionGroup>

	<ItemGroup>
		<CopyFileToFolders Include="$(MSBuildThisFileDirectory)../../lib/native/$(PlatformTarget)/$(Configuration)/cheapbmc.dll">
			<FileType>Document</FileType>
		</CopyFileToFolders>
	</ItemGroup>

</Project>
